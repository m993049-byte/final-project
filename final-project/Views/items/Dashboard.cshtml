@model IEnumerable<final_project.Models.CategoryStat>

@{
    Layout = "_Layoutadmin";
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Category');
        data.addColumn('number', 'Cars');

        data.addRows([
        @foreach (var cat in Model)
        {
                // نطبع صف لكل كاتيجوري (Cat 1, Cat 2, ...)
                @: ['Category @cat.Category', @cat.Count],
        }
        ]);

        var options = {
            title: 'Number of Cars per Category',
            width: 500,
            height: 350
        };

        var chart = new google.visualization.PieChart(
            document.getElementById('chart_div'));

        chart.draw(data, options);
    }
</script>

<div class="row">
    <div class="col-md-6">
        <div id="chart_div"></div>
    </div>

    <div class="col-md-6">

        <div class="row">
            @* كروت ديناميكية لكل كاتيجوري *@
            @foreach (var cat in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-header bg-warning text-center">
                            Category @cat.Category
                        </div>
                        <div class="card-body text-center">
                            <img src="@cat.ImageUrl"
                                 width="80"
                                 height="80"
                                 style="object-fit:cover; border-radius:8px;"
                                 alt="Category Image"
                                 onerror="this.src='/images/noimage.png';" />
                        </div>
                        <div class="card-footer text-center">
                            Number of Cars:
                            <div>@cat.Count</div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <br />

        <div class="row">
            <div class="col-md-6">
                <div class="card border-primary">
                    <div class="card-header bg-primary text-white text-center">
                        Total Items
                    </div>
                    <div class="card-body text-center">
                        <h3>@ViewData["totalItems"]</h3>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-success">
                    <div class="card-header bg-success text-white text-center">
                        Sold Quantity
                    </div>
                    <div class="card-body text-center">
                        <h3>@ViewData["soldQty"]</h3>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
