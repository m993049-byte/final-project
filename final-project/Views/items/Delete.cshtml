@model final_project.Models.items

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layoutadmin";

}
<style>
    /* خلفية الصفحة كاملة */
    body {
        background-color: #000000;
        color: #007bff; /* النص خارج الفورم أزرق */
    }

    /* العناوين خارج الفورم */
    h1, h4 {
        color: #007bff;
        margin-bottom: 15px;
    }

    hr {
        border: 1px solid #007bff;
        margin-bottom: 20px;
    }

    /* الفورم */
    form {
        background-color: #000000; /* الفورم أسود */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 10px rgba(0, 123, 255, 0.3);
    }

    /* العلامات داخل الفورم */
    label {
        display: block;
        margin-top: 10px;
        margin-bottom: 5px;
        font-weight: bold;
        color: #007bff; /* أزرق */
    }

    /* حقول الإدخال */
    input.form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #007bff;
        background-color: #1a1a1a; /* أسود داخلي */
        color: #ffffff; /* نص أبيض داخل الحقول */
        transition: 0.3s;
    }

        input.form-control:focus {
            outline: none;
            border-color: #00b0ff;
            box-shadow: 0 0 5px #00b0ff;
        }

    /* زر الإنشاء */
    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* رابط العودة */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #00b0ff;
            text-decoration: underline;
        }

    /* رسائل الأخطاء */
    .text-danger {
        color: #dc3545;
    }

    .col-sm-10 {
        color: white;
    }
</style>


<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>items</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.discount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imgfile)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.imgfile" height="150" alt="Image" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
