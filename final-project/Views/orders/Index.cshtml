@model IEnumerable<final_project.Models.orders>
@{
    Layout = "_Layoutadmin";
    ViewData["Title"] = "Purchase report page";
}

<style>
    h2 {
        text-align: center;
        color: #00b0ff;
        font-weight: bold;
        margin: 30px 0;
        font-size: 32px;
        letter-spacing: 1.5px;
    }
    body{
    background-color:black;
    }

    .table-container {
        max-width: 900px;
        margin: 0 auto 50px;
        background-color: #121921; /* خلفية داكنة */
        padding: 20px 30px;
        border-radius: 12px;
        box-shadow: 0 0 15px #00b0ff44;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        color: #e0e7f1; /* نص أبيض مزرق فاتح */
        font-size: 17px;
    }

    thead {
        background-color: #00b0ff;
        color: #000;
        font-weight: 700;
    }

        thead th {
            padding: 14px 12px;
            text-align: center;
        }

    tbody tr {
        border-bottom: 1px solid #28313b;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        tbody tr:hover {
            background-color: #1f2a38;
            color: #00b0ff; /* نص أزرق عند المرور */
        }

    tbody td {
        padding: 12px;
        text-align: center;
        color: #e0e7f1; /* نص أبيض مزرق فاتح */
    }

    tbody a {
        color: #00b0ff;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        tbody a:hover {
            color: #00e5ff;
            text-decoration: underline;
        }
</style>

<div class="table-container">
    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.custname</td>
                    <td>@item.total.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-custname="@item.custname">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
