@model IEnumerable<final_project.Models.items>

@{
    Layout = "_Layout";
}

<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        margin: 40px 0;
    }

        .page-title h1 {
            color: #00b0ff;
            font-size: 42px;
            font-weight: bold;
            letter-spacing: 2px;
        }

    .card {
        background-color: #111;
        border: 1px solid #00b0ff;
        border-radius: 12px;
        transition: 0.3s;
        height: 100%;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px #00b0ff;
        }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid #00b0ff;
        color: #00b0ff;
        font-weight: bold;
        text-align: center;
        font-size: 18px;
    }

    .card-body {
        text-align: center;
    }

        .card-body img {
            max-width: 100%;
            border-radius: 8px;
        }

    .card-footer {
        background-color: transparent;
        border-top: 1px solid #00b0ff;
        text-align: center;
    }

    .btn-buy {
        background-color: #00b0ff;
        color: #000;
        padding: 8px 25px;
        border-radius: 20px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
    }

        .btn-buy:hover {
            background-color: #00e5ff;
            color: #000;
            text-decoration: none;
        }
</style>

<!-- Page Title -->
<div class="page-title">
    <h1>Catalogue</h1>
</div>

<!-- Items -->
<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <div class="card-header">
                            @item.name
                        </div>
                        <div class="card-body">
                            <img src="@item.imgfile" height="150" alt="Image" />
                        </div>
                        <div class="card-footer">
                            <a class="btn-buy"
                               asp-controller="Orders"
                               asp-action="ItemBuyDetail"
                               asp-route-id="@item.Id">
                                Buy
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No items found.</p>
        }
    </div>
</div>
