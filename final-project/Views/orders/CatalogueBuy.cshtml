
@{
    Layout = "_Layout";

}
<h1>Catalogue</h1>
@model IEnumerable<final_project.Models.items>
<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        @item.name
                    </div> 
                    <div class="card-body">
                        <img src="@item.imgfile" height="150" alt="Image" />

                    </div>
                    <div class="card-footer">
                        <a asp-action="ItemBuyDetail" asp-route-id="@item.Id">Buy</a> 
                    </div>
                </div>
            </div>
        }
    </div>
</div>

