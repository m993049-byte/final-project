@model final_project.Models.items

<style>
    /* خلفية الصفحة كاملة */
    body {
        background-color: #000000;
        color: #007bff; /* النص خارج الفورم أزرق */
    }

    /* العناوين خارج الفورم */
    h1, h4 {
        color: #007bff;
        margin-bottom: 15px;
    }

    hr {
        border: 1px solid #007bff;
        margin-bottom: 20px;
    }

    /* الفورم */
    form {
        background-color: #000000; /* الفورم أسود */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 10px rgba(0, 123, 255, 0.3);
    }

    /* العلامات داخل الفورم */
    label {
        display: block;
        margin-top: 10px;
        margin-bottom: 5px;
        font-weight: bold;
        color: #007bff; /* أزرق */
    }

    /* حقول الإدخال */
    input.form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #007bff;
        background-color: #1a1a1a; /* أسود داخلي */
        color: #ffffff; /* نص أبيض داخل الحقول */
        transition: 0.3s;
    }

        input.form-control:focus {
            outline: none;
            border-color: #00b0ff;
            box-shadow: 0 0 5px #00b0ff;
        }

    /* زر الإنشاء */
    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* رابط العودة */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #00b0ff;
            text-decoration: underline;
        }

    /* رسائل الأخطاء */
    .text-danger {
        color: #dc3545;
    }

    .col-sm-10{
       color:white;

    }
</style>




<dl class="row">
    <dt class="col-sm-2"> Id </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2"> name</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.name)
    </dd>
   
    <dt class="col-sm-2"> description</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.description)
    </dd>
    <dt class="col-sm-2">quantity</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.quantity)
    </dd>
    <dt class="col-sm-2">price </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.price)
    </dd>
    <dt> Pic </dt>
    <dd>
    </dd>
    <img src="@Model.imgfile"
         class="img-thumbnail"
         style="width:370px; height:220px; object-fit:cover; background-color:black"
         alt="Image" />
    
</dl> <p style="color:red"> @ViewData["message"]</p>
<form asp-action="cartadd" asp-controller="orders">
    <input type="hidden" name="itemId" value=@Model.Id /> <div class="form-group">
        <label for="quantity" class="control-label">Quantity</label>
        <input type="number" min="1" value="1" max="@Model.quantity" name="quantity" class="form-control" id="qu" onchange="gettotal()" />
    </div>
    <div class='alert alert-success' id="tot"> </div>
    <input type="submit" value="Add to Cart" class="btn btn-primary" />
</form>
@section scripts {
    <script>
        function gettotal() {
        tot = 0;
                var q = document.getElementById('qu').value; var pr = '@Model.price';
                tot = q * pr; if ('@Model.discount' == "yes") {
                tot = (tot * 90) / 100
                }document.getElementById("tot").innerHTML = "total =" + tot;
                        }


    </script>
}

