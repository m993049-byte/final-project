@model final_project.Models.items
<dl class="row">
    <dt class="col-sm-2"> Id </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2"> name</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.name)
    </dd>
   
    <dt class="col-sm-2"> description</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.description)
    </dd>
    <dt class="col-sm-2">quantity</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.quantity)
    </dd>
    <dt class="col-sm-2">price </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.price)
    </dd>
    <dt> Pic </dt>
    <dd>
    </dd>
    <img src="@Model.imgfile"
         class="img-thumbnail"
         style="width:370px; height:220px; object-fit:cover;"
         alt="Image" />
    
</dl> <p style="color:red"> @ViewData["message"]</p>
<form asp-action="cartadd" asp-controller="orders">
    <input type="hidden" name="itemId" value=@Model.Id /> <div class="form-group">
        <label for="quantity" class="control-label">Quantity</label> <input name="quantity" class="form-control" id="qu" onchange="gettotal()" />
    </div>
    <div class='alert alert-success' id="tot"> </div>
    <input type="submit" value="Add to Cart" class="btn btn-primary" />
</form>
@section scripts {
    <script>
        function gettotal() {
        tot = 0;
                var q = document.getElementById('qu').value; var pr = '@Model.price';
                tot = q * pr; if ('@Model.discount' == "yes") {
                tot = (tot * 90) / 100
                }document.getElementById("tot").innerHTML = "total =" + tot;
                        }
    </script>
}

