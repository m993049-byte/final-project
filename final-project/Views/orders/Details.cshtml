@model List<final_project.Models.orders>

@{
    ViewData["Title"] = "Customer Orders Details";
    var role = Context.Session.GetString("Role");
    Layout = (role == "admin") ? "_Layoutadmin" : "_Layout";
}


<style>
    /* خلفية الصفحة كاملة */
    body {
        background-color: #000000;
        color: #007bff; /* النص خارج الفورم أزرق */
    }

    /* العناوين خارج الفورم */
    h1, h4 {
        color: #007bff;
        margin-bottom: 15px;
    }

    hr {
        border: 1px solid #007bff;
        margin-bottom: 20px;
    }

    /* الفورم */
    form {
        background-color: #000000; /* الفورم أسود */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 10px rgba(0, 123, 255, 0.3);
    }

    /* العلامات داخل الفورم */
    label {
        display: block;
        margin-top: 10px;
        margin-bottom: 5px;
        font-weight: bold;
        color: #007bff; /* أزرق */
    }

    /* حقول الإدخال */
    input.form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #007bff;
        background-color: #1a1a1a; /* أسود داخلي */
        color: #ffffff; /* نص أبيض داخل الحقول */
        transition: 0.3s;
    }

        input.form-control:focus {
            outline: none;
            border-color: #00b0ff;
            box-shadow: 0 0 5px #00b0ff;
        }

    /* زر الإنشاء */
    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* رابط العودة */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #00b0ff;
            text-decoration: underline;
        }

    /* رسائل الأخطاء */
    .text-danger {
        color: #dc3545;
    }

    .col-sm-10 {
        color: white;
    }

    tr{
        color:white
    }
</style>


<h1>Orders for Customer</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().custname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().orderdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.custname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.orderdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total)
                </td>
                <td>

                    <a class="btn-details"
                       asp-action="orderline"
                       asp-route-ordid="@item.Id">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>