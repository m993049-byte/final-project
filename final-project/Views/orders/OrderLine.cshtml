@model IEnumerable<final_project.Models.orderline>
@{
    var role = Context.Session.GetString("Role");
    Layout = (role == "admin") ? "_Layoutadmin" : "_Layout";
}

<style>
    /* خلفية الصفحة كاملة */
    body {
        background-color: #000000;
        color: #007bff; /* النص خارج الفورم أزرق */
    }

    /* العناوين خارج الفورم */
    h1, h4 {
        color: #007bff;
        margin-bottom: 15px;
    }

    hr {
        border: 1px solid #007bff;
        margin-bottom: 20px;
    }

    /* الفورم */
    form {
        background-color: #000000; /* الفورم أسود */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 10px rgba(0, 123, 255, 0.3);
    }

    /* العلامات داخل الفورم */
    label {
        display: block;
        margin-top: 10px;
        margin-bottom: 5px;
        font-weight: bold;
        color: #007bff; /* أزرق */
    }

    /* حقول الإدخال */
    input.form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #007bff;
        background-color: #1a1a1a; /* أسود داخلي */
        color: #ffffff; /* نص أبيض داخل الحقول */
        transition: 0.3s;
    }

        input.form-control:focus {
            outline: none;
            border-color: #00b0ff;
            box-shadow: 0 0 5px #00b0ff;
        }

    /* زر الإنشاء */
    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* رابط العودة */
    a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            color: #00b0ff;
            text-decoration: underline;
        }

    /* رسائل الأخطاء */
    .text-danger {
        color: #dc3545;
    }

    .col-sm-10 {
        color: white;
    }
</style>



<h1>Order Details</h1>
<table class="table">
    <thead>
        <tr style=" color:white">
            <th>	@Html.DisplayNameFor(model => model.itemname) </th>
            <th> @Html.DisplayNameFor(model => model.itemquant) </th>
            <th> @Html.DisplayNameFor(model => model.itemprice) </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style=" color:white">
                <td>@Html.DisplayFor(modelItem => item.itemname) </td>
                <td>@Html.DisplayFor(modelItem => item.itemquant) </td>
                <td>@Html.DisplayFor(modelItem => item.itemprice)	</td>
            </tr>
        }
    </tbody>
</table>
<p>
@if (role == "admin")
{
        <a asp-action="Index">Back to list</a>
}
@if (role == "customer")
{
    <a asp-action="MyOrder" >Back to Orders</a>
}
</p>



