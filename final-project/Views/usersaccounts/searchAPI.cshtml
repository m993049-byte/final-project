@{
    Layout = "_Layoutadmin";
    ViewData["Title"] = "Users Search";
}
<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        margin: 40px 0;
    }

        .page-title h1 {
            color: #00b0ff;
            font-size: 42px;
            font-weight: bold;
            letter-spacing: 2px;
        }

    .card {
        background-color: #111;
        border: 1px solid #00b0ff;
        border-radius: 12px;
        transition: 0.3s;
        height: 100%;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px #00b0ff;
        }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid #00b0ff;
        color: #00b0ff;
        font-weight: bold;
        text-align: center;
        font-size: 18px;
    }

    .card-body {
        text-align: center;
    }

        .card-body img {
            max-width: 100%;
            border-radius: 8px;
        }

    .card-footer {
        background-color: transparent;
        border-top: 1px solid #00b0ff;
        text-align: center;
    }

    .btn-buy {
        background-color: #00b0ff;
        color: #000;
        padding: 8px 25px;
        border-radius: 20px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
    }

        .btn-buy:hover {
            background-color: #00e5ff;
            color: #000;
            text-decoration: none;
        }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Users Search (API)</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">

            <label class="form-label">Select Role</label>
            <select class="form-control" id="roleSelect" onchange="loadNames()">
                <option value="">Please select</option>
                <option value="admin">Admin</option>
                <option value="customer">Customer</option>
            </select>

            <br />

            <label class="form-label">Select User Name</label>
            <select class="form-control" id="nameSelect">
                <option value="">Please select</option>
            </select>

            <button type="button" class="btn btn-success mt-3 w-100" onclick="showSelected()">
                Show Selected
            </button>
        </div>
    </div>

    <div class="row mt-4" id="resultsArea"></div>
</div>

<script>
    async function loadNames() {
        const role = document.getElementById("roleSelect").value;
        const nameSelect = document.getElementById("nameSelect");
        const results = document.getElementById("resultsArea");

        // reset
        nameSelect.innerHTML = '<option value="">Please select</option>';
        results.innerHTML = '';

        if (!role) return;

        const res = await fetch(`/api/getnameAPI?role=${encodeURIComponent(role)}`);
        const names = await res.json(); 

        names.forEach(n => {
            const opt = document.createElement("option");
            opt.value = n;
            opt.textContent = n;
            nameSelect.appendChild(opt);
        });
    }

    function showSelected() {
        const role = document.getElementById("roleSelect").value;
        const name = document.getElementById("nameSelect").value;
        const results = document.getElementById("resultsArea");

        results.innerHTML = '';

        if (!role || !name) {
            results.innerHTML = `
                <div class="col-12">
                    <div class="alert alert-warning text-center">
                        Please select role and name
                    </div>
                </div>`;
            return;
        }

        results.innerHTML = `
            <div class="col-md-4 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="mb-3">Selected User</h5>
                        <p class="mb-1"><b>Role:</b> ${role}</p>
                        <p class="mb-0"><b>Name:</b> ${name}</p>
                    </div>
                </div>
            </div>`;
    }
</script>
