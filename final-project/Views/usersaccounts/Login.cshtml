@{
    ViewData["Title"] = "login";
    Layout = null;
}
<head>
    <style>
        body {
            background-image: url('https://images3.alphacoders.com/139/thumb-1920-1397249.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center center;
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .login-box {
            background-color: #f8f8f8; /* خلفية فاتحة */
            padding: 30px 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
            width: 350px;
            text-align: left;
            opacity: 0.9;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: 5px;
            color: #555;

        }

        input.form-control {
            width: 100%;
            padding: 8px 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            background-color: white;
            color: #333;
            box-sizing: border-box;
        }

            input.form-control:focus {
                border-color: #4CAF50;
                outline: none;
                box-shadow: 0 0 5px #4CAF50;
            }

        .btn-login {
            width: 100%;
            background-color: #4CAF50; /* أخضر */
            border: none;
            padding: 10px;
            color: white;
            font-weight: bold;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-login:hover {
                background-color: #45a049;
            }

        p {
            margin-top: 15px;
            font-size: 14px;
            color: #555;
        }

            p a {
                color: #2196F3;
                text-decoration: none;
            }

                p a:hover {
                    text-decoration: underline;
                }

            p.message-error {
                color: red;
                text-align: center;
                margin-top: 10px;
            }
    </style>
</head>

<body>
    <center>
    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Login">
            <label>User Name</label>
            <input name="na" class="form-control" />

            <label>User Password</label>
            <input name="pa" class="form-control" type="password" />

            <input type="submit" value="Login" class="btn-login" />

            <p>Not registered? <a href="/usersaccounts/registration">Register here</a></p>

            <p class="message-error">@ViewData["message"]</p>
    
        </form>
        </center>
    </div>
</body>
