@model final_project.Models.usersaccounts

@{
    Layout = "_Layoutadmin";

    ViewData["Title"] = "Delete";
}
<style>
    body {
        background-color: #000;
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .page-title {
        text-align: center;
        margin: 40px 0;
    }

        .page-title h1 {
            color: #00b0ff;
            font-size: 42px;
            font-weight: bold;
            letter-spacing: 2px;
        }

    .card {
        background-color: #111;
        border: 1px solid #00b0ff;
        border-radius: 12px;
        transition: 0.3s;
        height: 100%;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 15px #00b0ff;
        }

    .card-header {
        background-color: transparent;
        border-bottom: 1px solid #00b0ff;
        color: #00b0ff;
        font-weight: bold;
        text-align: center;
        font-size: 18px;
    }

    .card-body {
        text-align: center;
    }

        .card-body img {
            max-width: 100%;
            border-radius: 8px;
        }

    .card-footer {
        background-color: transparent;
        border-top: 1px solid #00b0ff;
        text-align: center;
    }

    .btn-buy {
        background-color: #00b0ff;
        color: #000;
        padding: 8px 25px;
        border-radius: 20px;
        font-weight: bold;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
    }

        .btn-buy:hover {
            background-color: #00e5ff;
            color: #000;
            text-decoration: none;
        }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>usersaccounts</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pass)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pass)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.role)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
