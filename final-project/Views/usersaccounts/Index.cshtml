@model IEnumerable<final_project.Models.usersaccounts>

@{
    Layout = "_Layoutadmin";
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #0d1117; /* خلفية سوداء */
        color: #e0e7f1; /* نص أبيض مزرق فاتح */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        text-align: center;
        color: #00b0ff;
        font-weight: bold;
        margin: 30px 0;
        letter-spacing: 1.5px;
    }

    a.create-new {
        display: inline-block;
        margin: 20px auto; /* مسافة من الأعلى والأسفل + محاذاة أفقية */
        background-color: #00b0ff;
        color: #0d1117;
        padding: 10px 20px; /* زيادة الارتفاع قليلاً */
        border-radius: 6px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
        text-align: center; /* النص في المنتصف */
        display: block; /* لتفعيل margin auto على الأفقية */
        width: fit-content; /* ليتناسب مع حجم النص فقط */
    }

        a.create-new:hover {
            background-color: #00e5ff;
        }

    .table-container {
        max-width: 900px;
        margin: auto;
        background-color: #1a1f29; /* جدول داكن */
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 0 15px #00b0ff44;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        color: #e0e7f1;
    }

    thead {
        background-color: #00b0ff;
        color: #000;
        font-weight: bold;
    }

        thead th {
            padding: 12px;
            text-align: center;
        }

    tbody tr {
        border-bottom: 1px solid #28313b;
        transition: background-color 0.3s, color 0.3s;
    }

        tbody tr:hover {
            background-color: #1f2a38;
        }

    tbody td {
        padding: 10px;
        text-align: center;
        color: #e0e7f1;
    }

    tbody a {
        color: #00b0ff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

        tbody a:hover {
            color: #00e5ff;
            text-decoration: underline;
        }
</style>

<h1>@ViewData["Title"]</h1>

<p>
    <a class="create-new" asp-action="Create">Create New</a>
</p>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.name)</th>
                <th>@Html.DisplayNameFor(model => model.pass)</th>
                <th>@Html.DisplayNameFor(model => model.role)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.pass)</td>
                    <td>@Html.DisplayFor(modelItem => item.role)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
